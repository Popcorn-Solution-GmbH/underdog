{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding h5 {
    margin-bottom: 2rem;
  }

  .section-{{ section.id }}-padding .content_table {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.08);
  }
  .section-{{ section.id }}-padding .content_table > table {
    margin-bottom: 8rem;
  }
  .section-{{ section.id }}-padding .content_table td {
    width: 50%;
    padding: 16px 0;
  }

  .section-{{ section.id }}-padding .content-divider {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    margin: 2rem 0;
  }

  .section-{{ section.id }}-padding .section-headline {
    margin-bottom: 1.5rem;
  }

  .section-{{ section.id }}-padding .subheadline {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .section-{{ section.id }}-padding .content-two-columns {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .section-{{ section.id }}-padding .column-left,
  .section-{{ section.id }}-padding .column-right {
    flex: 1;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient'>
  <div class='page-width isolate scroll-trigger animate--slide-in section-{{ section.id }}-padding twcss-grid twcss-gap-32'>
    {%- if section.settings.heading != blank -%}
      <h2 class='title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'>
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'divider' -%}
          <hr class="content-divider" />

        {%- when 'section_headline' -%}
          <h3 class="section-headline">{{ block.settings.headline }}</h3>

        {%- when 'two_column_content' -%}
          <div class="content-two-columns">
            <div class="column-left">
              {{ block.settings.left_content }}
            </div>
            <div class="column-right">
              {{ block.settings.right_content }}
            </div>
          </div>

        {%- when 'subheadline_content' -%}
          <div class="subheadline-content">
            <h4 class="subheadline">{{ block.settings.subheadline }}</h4>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Flexible Content Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "divider",
      "name": "Trennlinie",
      "settings": []
    },
    {
      "type": "section_headline",
      "name": "Section Headline",
      "settings": [
        {
          "type": "text",
          "id": "headline",
          "label": "Ãœberschrift",
          "default": "Section Headline"
        }
      ]
    },
    {
      "type": "two_column_content",
      "name": "Inhalte mit zwei Spalten",
      "settings": [
        {
          "type": "richtext",
          "id": "left_content",
          "label": "Linke Spalte",
          "default": "<p>Linker Inhalt</p>"
        },
        {
          "type": "richtext",
          "id": "right_content",
          "label": "Rechte Spalte",
          "default": "<p>Rechter Inhalt</p>"
        }
      ]
    },
    {
      "type": "subheadline_content",
      "name": "Subheadline Content",
      "settings": [
        {
          "type": "text",
          "id": "subheadline",
          "label": "Subheadline",
          "default": "Send / Return"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flexible Content Section"
    }
  ]
}
{% endschema %}
