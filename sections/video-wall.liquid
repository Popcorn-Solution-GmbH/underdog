{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .video-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: space-between; /* Nutzt die gesamte Breite aus */
    align-items: flex-start;
  }

  .video-item {
    position: relative;
    flex: 1 1 calc(33.333% - 16px); /* Drei Videos pro Reihe */
    aspect-ratio: 4/6; /* Breitbild-Seitenverhältnis */
    overflow: hidden;
    border-radius: 8px;
    background: #000;
    max-width: calc(33.333% - 16px);
  }

  @media screen and (max-width: 750px) {
    .video-item {
      flex: 1 1 calc(100% - 16px); /* Ein Video pro Reihe bei kleineren Bildschirmen */
      max-width: calc(100% - 16px);
    }
  }

  .video-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{%- endstyle -%}

<div class="full-width-narrow color-{{ section.settings.color_scheme }} gradient">
  <div class="isolate scroll-trigger animate--slide-in section-{{ section.id }}-padding">
    <div class="video-list">
      {% for block in section.blocks %}
        <div class="video-item">
          {%- if block.settings.video != blank -%}
            {{
              block.settings.video
              | video_tag: autoplay: false, controls: true, loop: true, muted: false, preload: "metadata", 
            image_size: "600x", 
            poster: block.settings.video.preview_image | default: block.settings.cover_image
            }}
          {%- else -%}
            <p>Kein Video verfügbar</p>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video-Liste",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farbschema",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video hochladen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video-Liste"
    }
  ]
}
{% endschema %}
