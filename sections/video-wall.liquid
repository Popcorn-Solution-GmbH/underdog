{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .video-list {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: space-between; /* Nutzt die gesamte Breite aus */
    align-items: flex-start;
  }

  .video-item {
    position: relative;
    flex: 1 1 calc(33.333% - 16px); /* Drei Videos pro Reihe */
    aspect-ratio: 2/3; /* Breitbild-Seitenverhältnis */
    overflow: hidden;
    border-radius: 8px;
    background: #000;
    max-width: calc(33.333% - 16px);
  }

  @media screen and (max-width: 750px) {
    .video-item {
      flex: 1 1 calc(100% - 16px); /* Ein Video pro Reihe bei kleineren Bildschirmen */
      max-width: calc(100% - 16px);
    }
  }

  .video-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
    transition: opacity 0.3s ease;
  }

  .video-item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    z-index: 1;
  }

  .video-item img.hidden {
    opacity: 0;
    pointer-events: none;
  }
{%- endstyle -%}

<div class="full-width-narrow color-{{ section.settings.color_scheme }} gradient">
  <div class="isolate scroll-trigger animate--slide-in section-{{ section.id }}-padding">
    <div class="video-list">
      {% for block in section.blocks %}
        <div class="video-item">
          {%- if block.settings.video != blank -%}
            <img
              src="{{ block.settings.video.preview_image | image_url: width: 1200, height: 675, crop: 'center' }}"
              alt="Video Vorschau"
              class="video-preview"
              width="100%"
              height="100%"
              data-video-id="video-{{ block.id }}"
            >
            <video
              id="video-{{ block.id }}"
              controls
              preload="metadata"
              loop
              muted
              onclick="playVideo('{{ block.id }}')"
            >
              <source src="{{ block.settings.video | file_url }}" type="video/mp4">
              Dein Browser unterstützt dieses Videoformat nicht.
            </video>
          {%- else -%}
            <p>Kein Video verfügbar</p>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  function playVideo(id) {
    const video = document.getElementById(`video-${id}`);
    const preview = document.querySelector(`img[data-video-id="video-${id}"]`);
    if (video && preview) {
      preview.classList.add('hidden'); // Versteckt das Vorschaubild
      video.play(); // Startet das Video
    }
  }
</script>

{% schema %}
{
  "name": "Video-Liste",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farbschema",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video hochladen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video-Liste"
    }
  ]
}
{% endschema %}
