{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding h5 {
    margin-bottom: 2rem;
  }

  .section-{{ section.id }}-padding .content-divider {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    margin: 2rem 0;
  }

  .section-{{ section.id }}-padding .section-headline {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .section-{{ section.id }}-padding .section-subheadline {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .section-{{ section.id }}-padding .content-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .section-{{ section.id }}-padding .content-item {
    font-size: 1rem; /* Consistent font size */
    line-height: 1.6; /* Consistent line-height */
  }

  .section-{{ section.id }}-padding .content-item strong {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient'>
  <div class='page-width isolate scroll-trigger animate--slide-in section-{{ section.id }}-padding twcss-grid twcss-gap-32'>
    {%- if section.settings.heading != blank -%}
      <h2 class='title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'>
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class='visually-hidden'>{{ 'templates.contact.form.title' | t }}</h2>
    {%- endif -%}

    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'divider' -%}
          <hr class="content-divider" />

        {%- when 'section_headline' -%}
          <h3 class="section-headline">{{ block.settings.headline }}</h3>

        {%- when 'section_subheadline' -%}
          <h4 class="section-subheadline">{{ block.settings.subheadline }}</h4>

        {%- when 'content' -%}
          <div class="content-group">
            <div class="content-item">
              <strong>{{ block.settings.name1 }}</strong>
              <div>{{ block.settings.description1 }}</div>
            </div>
            <div class="content-item">
              <strong>{{ block.settings.name2 }}</strong>
              <div>{{ block.settings.description2 }}</div>
            </div>
            <div class="content-item">
              <strong>{{ block.settings.name3 }}</strong>
              <div>{{ block.settings.description3 }}</div>
            </div>
            <div class="content-item">
              <strong>{{ block.settings.name4 }}</strong>
              <div>{{ block.settings.description4 }}</div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>


